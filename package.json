{
    "name": "gritcss",
    "version": "2.3.2",
    "description": "A simple and extremely lightweight collection of CSS classes for quickly building robust, responsive web layouts targeting mobile and desktop experiences.",
    "keywords": [
        "css grid",
        "css framework",
        "grit",
        "gritcss",
        "grit.css",
        "layout"
    ],
    "author": "Maximilian Vincent Heidenreich",
    "license": "MIT",
    "homepage": "https://github.com/owner/project#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaximilianHeidenreich/grit.css.git"
    },
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "test": "npm run check",
        "check": "npx prettier --check ./src",
        "format": "npx prettier --write ./src",
        "build": "npm run format && npx gulp build",
        "watch": "npm run format && npx gulp watch"
    },
    "devDependencies": {
        "gulp": "^4.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-less": "^5.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-uglifycss": "^1.1.0",
        "husky": "^7.0.0",
        "less-plugin-autoprefix": "^2.0.0",
        "postcss": "^8.4.5",
        "prettier": "2.5.1"
    }
}
